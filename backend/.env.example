# Port where your backend API will run
PORT=8000

# MongoDB connection URI  
# Replace <username> and <password> with real credentials  
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/court-booking?retryWrites=true&w=majority

# JWT secret key (keep this long & secure!)
JWT_SECRET=your-super-secret-jwt-key-here

# Environment: development | production | staging
NODE_ENV=development